<Page x:Class="NDATTibbiCihaz.Presentation.PAnaMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NDATTibbiCihaz.Presentation"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="PAnaMenu">

    <Grid Background="Black" Loaded="Grid_Loaded">
        <StackPanel HorizontalAlignment="Center" Width="1280" Height="966" VerticalAlignment="Center">
            <Image Source="/Logo/logoyazili.jpg" Height="242" Width="532"/>
        </StackPanel>
        <Button x:Name="ButtonMakineyeBaglan" Content="MAKINEYE BAĞLAN" HorizontalAlignment="Left" Margin="600,500,0,0" VerticalAlignment="Top" Height="250" Width="250" FontSize="24" Click="ButtonMakineyeBaglan_Click"/>
        <Button x:Name="ButtonSonucEkraninaBaglan" Content="SONUÇ EKRANI" HorizontalAlignment="Right" Margin="0,500,600,0" VerticalAlignment="Top" Height="250" Width="250" FontSize="24" Click="ButtonSonucEkraninaBaglan_Click"/>
        <Label x:Name="TextBoxHosgeldiniz" HorizontalAlignment="Center" Margin="0,400,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24"/>
    </Grid>
</Page>
