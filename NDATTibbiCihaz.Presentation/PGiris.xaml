<Page x:Class="NDATTibbiCihaz.Presentation.PGiris"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NDATTibbiCihaz.Presentation"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="PGiris">

    <Grid Background="Black" Width="1920" Height="1080">
        <StackPanel HorizontalAlignment="Center" Width="1280" Height="626" VerticalAlignment="Center">
            <Image Source="/Logo/logoyazili.jpg" Height="273" Width="533"/>
        </StackPanel>
        <Label Content="ID:" Margin="620,623,-224,0" Foreground="White" Background="{x:Null}" VerticalAlignment="Top"/>
        <Label Content="Parola:" Margin="597,666,-224,0" Foreground="White" Background="{x:Null}" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxID" Margin="700,627,700,0" TextWrapping="Wrap" VerticalAlignment="Top" PreviewTextInput="TextBoxID_PreviewTextInput"/>
        <Button x:Name="ButtonGirisYap" Content="Giriş Yap" HorizontalAlignment="Left" Margin="856,728,0,0" VerticalAlignment="Top" Width="172" RenderTransformOrigin="0.505,-1.227" Click="ButtonGirisYap_Click" Height="40"/>
        <PasswordBox x:Name="TextBoxParola" Margin="700,670,700,0" VerticalAlignment="Top" PasswordChar="*"/>

    </Grid>
</Page>
