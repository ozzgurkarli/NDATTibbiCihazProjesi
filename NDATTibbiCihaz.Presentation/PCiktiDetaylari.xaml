            <Button x:Name="btnSwap" Content="3D Görüntüle" HorizontalAlignment="Left" Margin="723,712,0,0" VerticalAlignment="Top" FontSize="24" Width="174" Click="btnSwap_Click"/>
        </Grid>
        <Label x:Name="Sayac" Content="veriden GElen" HorizontalAlignment="Left" Margin="718,622,0,0" VerticalAlignment="Top" FontSize="24" RenderTransformOrigin="0.338,0.549" Width="165"/>
        <Button x:Name="SagaGorsel" Content="--&gt;" HorizontalAlignment="Left" Margin="883,624,0,0" VerticalAlignment="Top" Height="40" Width="93" FontSize="24" Click="SagaGorsel_Click"/>
        <Button x:Name="SolaGorsel" Content="&lt;--" HorizontalAlignment="Left" Margin="615,624,0,0" VerticalAlignment="Top" Height="42" Width="93" FontSize="24" Click="SolaGorsel_Click"/>
        <Button x:Name="ButtonRaporEkle" Content="Rapor Ekle" HorizontalAlignment="Left" Margin="309,352,0,0" VerticalAlignment="Top" FontSize="24" Width="194" Click="ButtonRaporEkle_Click"/>

