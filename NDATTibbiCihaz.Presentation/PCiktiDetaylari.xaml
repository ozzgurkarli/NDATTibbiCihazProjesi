        <Label x:Name="CDerece1" Content="veriden Derece" HorizontalAlignment="Left" Margin="309,287,0,0" VerticalAlignment="Top" Height="62" Width="180" FontSize="24"/>
        <Label Content="Rapor Numarası:" HorizontalAlignment="Left" Margin="54,349,0,0" VerticalAlignment="Top" Height="62" Width="194" FontSize="24"/>
        <Label Content="Rapor Yorumu:" HorizontalAlignment="Left" Margin="54,411,0,0" VerticalAlignment="Top" Height="62" Width="194" FontSize="24"/>
        <Label x:Name="RId" Content="Veriden ID" HorizontalAlignment="Left" Margin="309,349,0,0" VerticalAlignment="Top" Height="62" Width="194" FontSize="24"/>
        <Label x:Name="RYorum" Content="Veriden Yorum" HorizontalAlignment="Left" Margin="309,411,0,0" VerticalAlignment="Top" Height="62" Width="216" FontSize="24"/>
        <Image x:Name="PImage"  HorizontalAlignment="Left" Height="505" Margin="615,91,0,0" VerticalAlignment="Top" Width="385"/>
        <Grid Margin="0">
            <h:HelixViewport3D Height="505" Margin="614,83,51,0" VerticalAlignment="Top" Width="385" Name="model3D" Visibility="Hidden" >
